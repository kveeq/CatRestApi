<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CatRestApi.View.CatEditPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="name" Text="{Binding name}"/>
            <Entry Placeholder="name" Text="{Binding color}"/>
            <CheckBox IsChecked="{Binding gender}"/>
            <Button Text="Сохранить" Clicked="Button_Clicked"/>
            <Button Text="Удалить" Clicked="Button_Clicked_1"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>